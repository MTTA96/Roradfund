<?xml version="1.0" encoding="UTF-8"?>
<project name="walletmanager" default="all">
  
  
  <property file="walletmanager.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/*.rbc/**"/>
    <exclude name="**/*.yarb/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/CVS/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/vssver.scc/**"/>
    <exclude name="**/vssver2.scc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.war"/>
    <include name="*.swc"/>
    <include name="*.zip"/>
    <include name="*.egg"/>
    <include name="*.ane"/>
    <include name="*.jar"/>
    <include name="*.ear"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.1.8" value="${jdk.home.1.8}/bin"/>
  <path id="jdk.classpath.1.8">
    <fileset dir="${jdk.home.1.8}">
      <include name="jre/lib/charsets.jar"/>
      <include name="jre/lib/deploy.jar"/>
      <include name="jre/lib/ext/access-bridge-64.jar"/>
      <include name="jre/lib/ext/cldrdata.jar"/>
      <include name="jre/lib/ext/dnsns.jar"/>
      <include name="jre/lib/ext/jaccess.jar"/>
      <include name="jre/lib/ext/jfxrt.jar"/>
      <include name="jre/lib/ext/localedata.jar"/>
      <include name="jre/lib/ext/nashorn.jar"/>
      <include name="jre/lib/ext/sunec.jar"/>
      <include name="jre/lib/ext/sunjce_provider.jar"/>
      <include name="jre/lib/ext/sunmscapi.jar"/>
      <include name="jre/lib/ext/sunpkcs11.jar"/>
      <include name="jre/lib/ext/zipfs.jar"/>
      <include name="jre/lib/javaws.jar"/>
      <include name="jre/lib/jce.jar"/>
      <include name="jre/lib/jfr.jar"/>
      <include name="jre/lib/jfxswt.jar"/>
      <include name="jre/lib/jsse.jar"/>
      <include name="jre/lib/management-agent.jar"/>
      <include name="jre/lib/plugin.jar"/>
      <include name="jre/lib/resources.jar"/>
      <include name="jre/lib/rt.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.1.8}"/>
  <property name="project.jdk.bin" value="${jdk.bin.1.8}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.1.8"/>
  
  
  <!-- Project Libraries -->
  
  <path id="library.com.google.code.gson:gson:2.8.5.classpath">
    <pathelement location="${path.variable.maven_repository}/com/google/code/gson/gson/2.8.5/gson-2.8.5.jar"/>
  </path>
  
  <path id="library.com.squareup.okhttp3:logging-interceptor:3.3.0.classpath">
    <pathelement location="${path.variable.maven_repository}/com/squareup/okhttp3/logging-interceptor/3.3.0/logging-interceptor-3.3.0.jar"/>
    <pathelement location="${path.variable.maven_repository}/com/squareup/okhttp3/okhttp/3.3.0/okhttp-3.3.0.jar"/>
    <pathelement location="${path.variable.maven_repository}/com/squareup/okio/okio/1.8.0/okio-1.8.0.jar"/>
  </path>
  
  <path id="library.com.squareup.retrofit2:converter-gson:2.4.0.classpath">
    <pathelement location="${path.variable.maven_repository}/com/google/code/gson/gson/2.8.2/gson-2.8.2.jar"/>
    <pathelement location="${path.variable.maven_repository}/com/squareup/okhttp3/okhttp/3.10.0/okhttp-3.10.0.jar"/>
    <pathelement location="${path.variable.maven_repository}/com/squareup/okio/okio/1.14.0/okio-1.14.0.jar"/>
    <pathelement location="${path.variable.maven_repository}/com/squareup/retrofit2/converter-gson/2.4.0/converter-gson-2.4.0.jar"/>
    <pathelement location="${path.variable.maven_repository}/com/squareup/retrofit2/retrofit/2.4.0/retrofit-2.4.0.jar"/>
  </path>
  
  <path id="library.com.squareup.retrofit2:retrofit:2.2.0.classpath">
    <pathelement location="${path.variable.maven_repository}/com/squareup/okhttp3/okhttp/3.6.0/okhttp-3.6.0.jar"/>
    <pathelement location="${path.variable.maven_repository}/com/squareup/okio/okio/1.11.0/okio-1.11.0.jar"/>
    <pathelement location="${path.variable.maven_repository}/com/squareup/retrofit2/retrofit/2.2.0/retrofit-2.2.0.jar"/>
  </path>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <fileset dir="${javac2.home}">
      <include name="javac2.jar"/>
      <include name="jdom.jar"/>
      <include name="asm-all*.jar"/>
      <include name="jgoodies-forms.jar"/>
    </fileset>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  
  <!-- Module WalletManager -->
  
  <dirname property="module.walletmanager.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.walletmanager" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.walletmanager" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.walletmanager" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.walletmanager" value="-encoding UTF-8 -source 8 -target 8 ${compiler.args}"/>
  
  <property name="walletmanager.output.dir" value="${module.walletmanager.basedir}/out/production/WalletManager"/>
  <property name="walletmanager.testoutput.dir" value="${module.walletmanager.basedir}/out/test/WalletManager"/>
  
  <path id="walletmanager.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="walletmanager.module.production.classpath">
    <path refid="${module.jdk.classpath.walletmanager}"/>
    <path refid="library.com.google.code.gson:gson:2.8.5.classpath"/>
    <path refid="library.com.squareup.retrofit2:retrofit:2.2.0.classpath"/>
    <path refid="library.com.squareup.retrofit2:converter-gson:2.4.0.classpath"/>
    <path refid="library.com.squareup.okhttp3:logging-interceptor:3.3.0.classpath"/>
  </path>
  
  <path id="walletmanager.runtime.production.module.classpath">
    <pathelement location="${walletmanager.output.dir}"/>
    <path refid="library.com.google.code.gson:gson:2.8.5.classpath"/>
    <path refid="library.com.squareup.retrofit2:retrofit:2.2.0.classpath"/>
    <path refid="library.com.squareup.retrofit2:converter-gson:2.4.0.classpath"/>
    <path refid="library.com.squareup.okhttp3:logging-interceptor:3.3.0.classpath"/>
  </path>
  
  <path id="walletmanager.module.classpath">
    <path refid="${module.jdk.classpath.walletmanager}"/>
    <pathelement location="${walletmanager.output.dir}"/>
    <path refid="library.com.google.code.gson:gson:2.8.5.classpath"/>
    <path refid="library.com.squareup.retrofit2:retrofit:2.2.0.classpath"/>
    <path refid="library.com.squareup.retrofit2:converter-gson:2.4.0.classpath"/>
    <path refid="library.com.squareup.okhttp3:logging-interceptor:3.3.0.classpath"/>
  </path>
  
  <path id="walletmanager.runtime.module.classpath">
    <pathelement location="${walletmanager.testoutput.dir}"/>
    <pathelement location="${walletmanager.output.dir}"/>
    <path refid="library.com.google.code.gson:gson:2.8.5.classpath"/>
    <path refid="library.com.squareup.retrofit2:retrofit:2.2.0.classpath"/>
    <path refid="library.com.squareup.retrofit2:converter-gson:2.4.0.classpath"/>
    <path refid="library.com.squareup.okhttp3:logging-interceptor:3.3.0.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.walletmanager">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.walletmanager">
    <patternset refid="excluded.from.module.walletmanager"/>
  </patternset>
  
  <path id="walletmanager.module.sourcepath">
    <dirset dir="${module.walletmanager.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.walletmanager" depends="compile.module.walletmanager.production,compile.module.walletmanager.tests" description="Compile module WalletManager"/>
  
  <target name="compile.module.walletmanager.production" depends="register.custom.compilers" description="Compile module WalletManager; production classes">
    <mkdir dir="${walletmanager.output.dir}"/>
    <javac2 destdir="${walletmanager.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.walletmanager}/javac">
      <compilerarg line="${compiler.args.walletmanager}"/>
      <bootclasspath refid="walletmanager.module.bootclasspath"/>
      <classpath refid="walletmanager.module.production.classpath"/>
      <src refid="walletmanager.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.walletmanager"/>
    </javac2>
    
    <copy todir="${walletmanager.output.dir}">
      <fileset dir="${module.walletmanager.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.walletmanager.tests" depends="register.custom.compilers,compile.module.walletmanager.production" description="compile module WalletManager; test classes" unless="skip.tests"/>
  
  <target name="clean.module.walletmanager" description="cleanup module">
    <delete dir="${walletmanager.output.dir}"/>
    <delete dir="${walletmanager.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.walletmanager" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.walletmanager" description="build all modules"/>
  
  <target name="all" depends="build.modules" description="build all"/>
</project>