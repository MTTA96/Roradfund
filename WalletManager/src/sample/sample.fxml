<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane style="-fx-background-color: E7E6E6;" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
    <children>
      <BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <center>
                  <TabPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: E7E6E6;" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
                      <tabs>
                          <Tab text="Check Wallet">
                              <content>
                                  <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                                      <children>
                                          <BorderPane layoutX="6.0" prefHeight="225.0" prefWidth="760.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="0.0">
                                              <padding>
                                                  <Insets top="10.0" />
                                              </padding>
                                 <bottom>
                                    <AnchorPane prefHeight="20.0" BorderPane.alignment="CENTER" />
                                 </bottom>
                                 <center>
                                                <TableView fx:id="tbvResults" BorderPane.alignment="CENTER">
                                                    <columns>
                                          <TableColumn fx:id="serialCol" editable="false" maxWidth="750.0" prefWidth="75.0" sortable="false" text="STT" />
                                                        <TableColumn fx:id="addressCol" editable="false" minWidth="100.0" prefWidth="380.0" sortable="false" text="Địa chỉ" />
                                                        <TableColumn fx:id="balanceCol" editable="false" prefWidth="250.0" sortable="false" text="ETH" />
                                                    </columns>
                                                    <columnResizePolicy>
                                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                                    </columnResizePolicy>
                                                </TableView>
                                 </center>
                                 <left>
                                    <HBox BorderPane.alignment="CENTER">
                                       <children>
                                          <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minWidth="270.0" spacing="40.0">
                                             <children>
                                                <HBox spacing="10.0">
                                                   <children>
                                                      <AnchorPane>
                                                         <children>
                                                            <Label text="File :" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                                                         </children>
                                                      </AnchorPane>
                                                      <TextField fx:id="txfFilePath" />
                                                      <Button fx:id="btnOpenResFile" mnemonicParsing="false" onAction="#openResourceFile" style="-fx-background-color: null;" text="Browse" textFill="#6685ff" />
                                                   </children>
                                                   <opaqueInsets>
                                                      <Insets />
                                                   </opaqueInsets>
                                                </HBox>
                                                <HBox spacing="5.0">
                                                   <children>
                                                      <Label text="Số lượng ví :" />
                                                      <Label fx:id="lblCountedWallet" />
                                                   </children>
                                                </HBox>
                                                <HBox spacing="5.0">
                                                   <children>
                                                      <Label text="Tổng :" textFill="#030303" />
                                                      <Label fx:id="lblSum" />
                                                   </children>
                                                </HBox>
                                                <Pane prefHeight="0.0" />
                                                <HBox alignment="CENTER_LEFT" spacing="50.0">
                                                   <children>
                                                      <Button fx:id="btnCheck" mnemonicParsing="false" onAction="#checkBalance" prefWidth="70.0" text="Bắt đầu" />
                                                      <Button mnemonicParsing="false" onAction="#delete" prefWidth="70.0" text="Xóa" />
                                                   </children>
                                                </HBox>
                                             </children>
                                          </VBox>
                                       </children>
                                    </HBox>
                                 </left>
                                 <top>
                                    <AnchorPane prefHeight="10.0" BorderPane.alignment="CENTER" />
                                 </top>
                                          </BorderPane>
                                      </children>
                                  </AnchorPane>
                              </content>
                          </Tab>
                          <Tab text="Trading">
                              <content>
                                  <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
                              </content>
                          </Tab>
                      </tabs>
                  </TabPane>
         </center>
      </BorderPane>
    </children>
</AnchorPane>
